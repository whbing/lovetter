<%
var post = page;
%>

<article class="post-container post-container--single">

  <header class="post-header">
    
    <h1 class="post-title"><%= post.title %></h1>

    <% if (type == 'post') { %>

    <div class="post-meta">
      <span title="建立时间" class="post-meta-item-icon">
         <i class="fa fa-file-text-o"></i>
      </span>
      <time datetime="<%= date(post.date, config.date_format) %>" class="post-meta__date date"><%= date(post.date, config.date_format) %></time>
      <span class="post-meta-divider">|</span>

      <span title="更新时间" class="post-meta-item-icon">
         <i class="fa fa-file-text"></i>
      </span>
      <time datetime="<%= date(post.updated, config.date_format) %>" class="post-list__meta--date date"><%= date(post.updated, config.date_format) %></time>

      <span class="post-meta__tags tags">
          <!-- 如果有分类 -->
          <% if (post.categories && post.categories.length > 0){ %>
            <span class="post-meta-divider">|</span>
            <font class="categories">
            <span title="分类" class="post-meta-item-icon">
               <i class="fa fa-folder-o"></i>
            </span>
            <%- list_categories(post.categories, {
              show_count: false,
              class: 'categories',
              style: 'none'
            }) %>
            </font>
          <% } %>
        <!-- 如果有tags -->
          <% if (post.tags && post.tags.length > 0){ %>
            <span class="post-meta-divider">|</span>
            <span title="标签" class="post-meta-item-icon">
               <i class="fa fa-tags"></i>
            </span>
            <font class="tags">
              <%- list_tags(post.tags, {
                show_count: false,
                style: 'none',
                class: 'tags'
              }) %>
            </font>
          <% } %>

      </span>
    </div>
    
    <% } %>

  </header>

  <section id="post-content" class="article-content post">
    <%- post.content %>
  </section>

  <%- partial('comment') %>


</article>

